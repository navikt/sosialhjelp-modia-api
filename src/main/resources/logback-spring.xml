<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <appender name="stdout_json" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="net.logstash.logback.encoder.LogstashEncoder"/>
    </appender>

    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%green(%d{HH:mm:ss}) %cyan([%-5.5t]) %boldCyan(%0.-5p) %yellow(%-20.20logger{19}) %cyan(:) %m%n
            </pattern>
        </encoder>
    </appender>

    <logger name="no.nav.sbl.sosialhjelpmodiaapi" level="INFO"/>


    <appender name="abac-audit-file" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>/log/abac-audit.log</file>
        <append>true</append>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>/log/abac-audit.log.%d{yyyy-MM-dd}</fileNamePattern>
            <maxHistory>1</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%date{ISO8601} ${applicationName} %level %mdc %m%n%rEx</pattern>
        </encoder>
    </appender>

    <appender name="abac-audit-async-file" class="ch.qos.logback.classic.AsyncAppender">
        <appender-ref ref="abac-audit-file"/>
    </appender>

    <logger name="AuditLogger" additivity="false">
        <appender-ref ref="abac-audit-async-file"/>
    </logger>

    <springProfile name="!(local | mock)">
        <root level="INFO">
            <appender-ref ref="stdout_json"/>
        </root>
    </springProfile>

    <springProfile name="local | mock">
        <root level="INFO">
            <appender-ref ref="CONSOLE"/>
        </root>

        <logger name="no.nav.sbl.sosialhjelpmodiaapi" level="DEBUG"/>

        <logger name="org.springframework" level="INFO"/>
        <logger name="org.springframework.security" level="DEBUG"/>
        <logger name="org.springframework.web" level="DEBUG"/>

    </springProfile>

</configuration>