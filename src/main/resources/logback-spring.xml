<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <appender name="stdout_json" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="net.logstash.logback.encoder.LogstashEncoder"/>
    </appender>

    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%green(%d{HH:mm:ss}) %cyan([%-5.5t]) %boldCyan(%0.-5p) %yellow(%-20.20logger{19}) %cyan(:) %m%n
            </pattern>
        </encoder>
    </appender>

    <logger name="no.nav.sbl.sosialhjelpmodiaapi" level="INFO"/>

    <springProfile name="!(local | mock)">
        <root level="INFO">
            <appender-ref ref="stdout_json"/>
        </root>

        <appender name="auditLogger" class="com.papertrailapp.logback.Syslog4jAppender">
            <layout class="ch.qos.logback.classic.PatternLayout">
                <pattern>%msg%n</pattern>
            </layout>
            <syslogConfig class="org.productivity.java.syslog4j.impl.net.tcp.TCPNetSyslogConfig">
                <host>audit.nais</host>
                <port>6514</port>
                <ident>sosialhjelp-modia-api</ident>
                <maxMessageLength>128000</maxMessageLength>
            </syslogConfig>
        </appender>

        <logger level="INFO" name="auditLogger" additivity="false">
            <appender-ref ref="auditLogger" />
        </logger>
    </springProfile>

    <springProfile name="local | mock">
        <root level="INFO">
            <appender-ref ref="CONSOLE"/>
        </root>

        <appender name="auditLogger" class="ch.qos.logback.core.ConsoleAppender">
            <encoder>
                <pattern>%msg%n</pattern>
            </encoder>
        </appender>

        <logger name="auditLogger">
            <appender-ref ref="auditLogger"/>
        </logger>

        <logger name="no.nav.sbl.sosialhjelpmodiaapi" level="DEBUG"/>

        <logger name="org.springframework" level="INFO"/>
        <logger name="org.springframework.security" level="INFO"/>
        <logger name="org.springframework.web" level="INFO"/>

    </springProfile>

</configuration>